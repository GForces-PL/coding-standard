<?xml version="1.0"?>
<ruleset name="GForces">
    <description>GForces coding standard.</description>
    <exclude-pattern>*/views/*</exclude-pattern>

    <!-- Include the whole PSR-2 standard -->
    <rule ref="PSR2">
        <exclude name="PSR1.Classes.ClassDeclaration" />
        <exclude name="PSR2.Files.EndFileNewline" />
        <exclude name="Generic.ControlStructures.InlineControlStructure" />
        <exclude name="Generic.Files.LineLength" />
    </rule>

    <rule ref="Generic.Files.EndFileNoNewline" />
    <rule ref="PEAR.ControlStructures.MultiLineCondition" />

    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/vendors/*</exclude-pattern>
    <exclude-pattern>*/tests/*</exclude-pattern>
    <exclude-pattern>*/runtime/*</exclude-pattern>
    <exclude-pattern>*/messages/*</exclude-pattern>
    <exclude-pattern>*/extensions/*</exclude-pattern>
</ruleset>
